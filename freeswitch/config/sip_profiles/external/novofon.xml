<include>
  <!-- 
    Gateway для Новофон (Novofon)
    SIP trunk подключение к VoIP провайдеру
  -->
  
  <gateway name="novofon">
    <!-- Имя пользователя SIP -->
    <param name="username" value="${SIP_USERNAME}"/>
    
    <!-- Пароль -->
    <param name="password" value="${SIP_PASSWORD}"/>
    
    <!-- SIP сервер провайдера -->
    <param name="proxy" value="${SIP_PROVIDER_HOST}"/>
    <param name="realm" value="${SIP_PROVIDER_HOST}"/>
    <param name="from-domain" value="${SIP_PROVIDER_HOST}"/>
    
    <!-- Регистрация -->
    <param name="register" value="true"/>
    <param name="register-transport" value="udp"/>
    <param name="retry-seconds" value="30"/>
    <param name="expire-seconds" value="600"/>
    
    <!-- Caller ID -->
    <param name="caller-id-in-from" value="true"/>
    
    <!-- Контекст для входящих звонков -->
    <param name="context" value="public"/>
    
    <!-- Опции -->
    <param name="ping" value="30"/>
  </gateway>
</include>

